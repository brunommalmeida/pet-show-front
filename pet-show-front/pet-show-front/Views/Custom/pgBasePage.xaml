<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="pet_show_front.Views.Custom.pgBasePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.1" Color="{AppThemeBinding Light={StaticResource gradienteInicial}, Dark={StaticResource gradienteInicialDark}, Default={StaticResource gradienteInicial}}" />
            <GradientStop Offset="1.0" Color="{AppThemeBinding Light={StaticResource gradienteFinal}, Dark={StaticResource gradienteFinalDark}, Default={StaticResource gradienteFinal}}" />
        </LinearGradientBrush>
    </ContentPage.Background>
</ContentPage>